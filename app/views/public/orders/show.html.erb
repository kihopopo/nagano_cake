 <div class = "row">
   <div class = "col-lg-8">
     <strong>注文情報</strong>
     <table class="table">
      <tr>
        <td>注文日</td>
        <td><%= @order.created_at.to_s(:datetime_jp) %></td>
      </tr>
      <tr>
        <td>配送先</td>
        <td><p>〒<%= @order.postal_code %></p>
             <p><%= @order.address %></p>
             <p><%= @order.name %></p></td>
      </tr>
      <tr>
        <td>支払方法</td>
        <td><%= @order.payment_method_i18n %></td>
      </tr>
      <tr>
        <td>ステータス</td>
        <td><%= @order.status_i18n %></td>
      </tr>
   </div>
   <div class = "col-lg-4">
    <strong>請求情報</strong>
     <table class="table">
      <tr>
        <td>商品合計</td>
        <td><%= @total %></td>
      </tr>
