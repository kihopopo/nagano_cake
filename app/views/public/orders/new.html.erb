<h3>注文情報入力</h3>
<strong>支払い方法</strong>
  <%= form_with model: @order, url:orders_confirm_path, method: :post do |f| %>
   <div>
      <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card]%>
　　　<%#= f.radio_button :payment_method, :credit_card %>
　　　<%#= f.label :payment_method, 'クレジットカード' %>
　 </div>
　 <div>
　　  <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
　　　<%#= f.radio_button :payment_method, :transfer %>
　　　<%#= f.label :payment_method, '銀行振込'  %>
　 </div>

  <strong>お届け先</strong>
  <table class = "table">
   <tr>
     <td>
      <%= f.radio_button :select_address, '1' %>
      <%= f.label :select_address, 'ご自身の住所',value: 1 %>
     </td>
   </tr>
   <tr>
     <td>
      <%= @customer.address %>
     </td>
   </tr>
   <tr>
     <td>
      <%= @customer.full_name %>
     </td>
   </tr>
    <tr>
     <td>
      <%= f.radio_button :select_address, '2' %>
      <%= f.label :select_address, '登録済住所から選択',value: 2 %>
     </td>
    </tr>
    <tr>
     <td><%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %></td>
    </tr>
    <tr>
     <td>
      <%= f.radio_button :select_address, '3' %>
      <%= f.label :select_address, '新しいお届け先',value: 3 %>
     </td>
    </tr>
    <tr>
     <td>
       <%= f.label :postal_code,"郵便番号(ハイフンなし)" %>
     </td>
     <td>
       <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
     </td>
    </tr>
    <tr>
     <td>住所</td>
     <td colspan="2">
     <%= f.text_field :address, autofocus: true, autocomplete: "address",size: "60" %>
     </td>
    </tr>
    <tr>
　　　<td>宛名</td>
　　　<td><%= f.text_field :name %></td>
　　</tr>
　</table>
　<div class="container">
    <%= f.submit "確認画面へ進む",class:"btn btn-primary" %>
  </div>

  <% end %>






