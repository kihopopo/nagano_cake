<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h3>商品一覧</h3>
     <table class="table table-hover table-inverse">
    　 <thead>
        <tr class="table-secondary">
          <th>商品ID</th>
          <th>商品名 </th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
        <% @items.each do |item| %>
          <tr>
           <td>
            <%= item.id %>
           </td>
            <td>
             <%= link_to item.name %>
            </td>
            <td>
             <%= item.price %>
            </td>
            <td>
             <%= item.genre_id %>
            </td>
            <td>
             <%= item.is_active %> 
            </td>
           </tr>
          </thead>
           <%end%>
        </table>  
        </div>
      </div>
    </div>

