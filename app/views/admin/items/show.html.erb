 <div class = "container">
     <div class = "row">
         <div class = "col-3">
             <h3>商品詳細</h3>
         </div>
     </div>
 </div>
   
 
 <div class="col-md-8 offset-md-1">
  <table class="table">
    <tbody>
      <tr>
        <td>商品名</td>
        <td><%= @item.name %></td>
    　</tr>
    　<tr>
    　  <td>商品説明</td>
    　  <td><%= @item.introduction %></td>
    　</tr>
    　<tr>
    　  <td>ジャンル</td>
    　  <td><%= @item.genre.name %></td>
    　</tr>
    　<tr>
    　  <td>税込価格
    　  （税抜価格）</td>
    　  <td><%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
    　</tr>
    　<tr>
    　  <td>販売ステータス</td>
    　  <td><%= @item.is_active %> </td>
    　</tr>
    </tbody>
   </table>
   <%=link_to edit_admin_item_path(@item.id), class:"btn btn-sm btn-success" do %>
    編集する
   <%end%>
  </div>